/*Crie um programa onde o usuário digite um número e informe se é positivo.*/




programa {
  funcao inicio() {

    //Declaraçao de variaveis

    real numero 


    //Entrada de dados

    escreva("Digite um numero : ")
    leia(numero)


    //Prossecamento de dados
    se(numero > 0){
      escreva("O numero é positivo")


    }
  
    
    
    //Saida de dados

    


    
  }
}
